{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "cppbuild",
      "command": "gcc", /* /usr/bin/gcc */
      "args": [
        "-fdiagnostics-color=always",
        "-g",
				"-Wall",
				"-Werror",
				"-Wextra",
				"-pedantic",
				"-std=c89",
        "${fileDirname}/*.c",
        "-o",
        "${fileDirname}/monty"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}